<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Rodadas</h1>

  <% if current_user.admin? %>
    <div class="mb-4 space-x-4">
      <%= link_to "Nova Rodada", new_round_path, class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700" %>
      <%= link_to "Ver Todas as Apostas", all_bets_path, class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
    </div>
  <% end %>

  <% if @rounds.empty? %>
    <p class="text-gray-600">Nenhuma rodada criada ainda.</p>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @rounds.each do |round| %>
        <div class="border p-4 rounded-md shadow-sm">
          <h2 class="text-lg font-semibold">Rodada <%= round.number %></h2>
          <div class="mt-2 space-y-2">
            <%= link_to "Ver Jogos", round_path(round), class: "block text-blue-600 hover:underline" %>
            <%= link_to "Fazer Apostas", new_round_bet_path(round), class: "block text-blue-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
