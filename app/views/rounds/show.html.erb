<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Rodada <%= @round.number %></h1>

  <div class="mb-4">
    <%= link_to "Voltar para Rodadas", rounds_path, class: "text-blue-600 hover:underline" %>
  </div>

  <% if @games.empty? %>
    <p class="text-gray-600">Nenhum jogo cadastrado nesta rodada.</p>
  <% else %>
    <div class="space-y-4">
      <% @games.each do |game| %>
        <div class="border p-4 rounded-md shadow-sm">
          <h2 class="text-lg font-semibold">
            <%= game.home_team.name %> X <%= game.away_team.name %>
          </h2>
          <p class="text-sm text-gray-500">
            Divis√£o: <%= game.home_team.division %>
          </p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>