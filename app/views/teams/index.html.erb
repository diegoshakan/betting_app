<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Times</h1>

  <div class="mb-4">
    <%= link_to "Novo Time", new_team_path, class: "bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700" %>
    <%= link_to "Voltar para Rodadas", rounds_path, class: "ml-4 text-blue-600 hover:underline" %>
  </div>

  <% if @teams.empty? %>
    <p class="text-gray-600">Nenhum time registrado ainda.</p>
  <% else %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border">
        <thead>
          <tr>
            <th class="px-4 py-2 border">Nome</th>
            <th class="px-4 py-2 border">Divisão</th>
            <th class="px-4 py-2 border">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @teams.each do |team| %>
            <tr>
              <td class="px-4 py-2 border"><%= team.name %></td>
              <td class="px-4 py-2 border"><%= team.division %></td>
              <td class="px-4 py-2 border">
                <%= link_to "Editar", edit_team_path(team), class: "text-blue-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
