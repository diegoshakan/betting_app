<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Editar Time</h1>

  <%= form_with model: @team, local: true, class: "space-y-4" do |form| %>
    <div>
      <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      <% if @team.errors[:name].any? %>
        <p class="text-red-500 text-sm"><%= @team.errors[:name].join(", ") %></p>
      <% end %>
    </div>

    <div>
      <%= form.label :division, "DivisÃ£o", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :division, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" %>
      <% if @team.errors[:division].any? %>
        <p class="text-red-500 text-sm"><%= @team.errors[:division].join(", ") %></p>
      <% end %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit "Salvar", class: "bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700" %>
      <%= link_to "Cancelar", teams_path, class: "bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700" %>
    </div>
  <% end %>
</div>
