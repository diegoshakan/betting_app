<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Apostas por Usuário</h1>

  <div class="mb-4">
    <%= link_to "Voltar para Rodadas", rounds_path, class: "text-blue-600 hover:underline" %>
  </div>

  <% if @users.empty? %>
    <p class="text-gray-600">Nenhum usuário com apostas registrado ainda.</p>
  <% else %>
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-2">Usuários</h2>
      <ul class="list-disc pl-6">
        <% @users.each do |user| %>
          <li>
            <%= link_to user.email, user_bets_path(user_id: user.id), class: "text-blue-600 hover:underline" %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
