<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Classificação e Apostas</h1>

  <div class="mb-4">
    <%= link_to "Voltar para Rodadas", rounds_path, class: "text-blue-600 hover:underline" %>
  </div>

  <% if @users.empty? %>
    <p class="text-gray-600">Nenhum usuário com apostas em rodadas abertas ou em andamento.</p>
  <% else %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border">
        <thead>
          <tr>
            <th class="px-4 py-2 border">Usuário</th>
            <th class="px-4 py-2 border">Pontuação (Em Andamento)</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="px-4 py-2 border">
                <%= link_to user.name, user_bets_path(user_id: user.id), class: "text-blue-600 hover:underline" %>
              </td>
              <td class="px-4 py-2 border">
                <%= @user_scores[user.id] > 0 ? @user_scores[user.id] : "N/A" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
