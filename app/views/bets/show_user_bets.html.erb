<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6">Apostas de <%= @user.email %></h1>

  <div class="mb-4">
    <%= link_to "Voltar para Lista de Usuários", all_bets_path, class: "text-blue-600 hover:underline" %>
  </div>

  <% if @bets.empty? %>
    <p class="text-gray-600">Nenhuma aposta registrada para este usuário.</p>
  <% else %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white border">
        <thead>
          <tr>
            <th class="px-4 py-2 border">Jogo</th>
            <th class="px-4 py-2 border">Rodada</th>
            <th class="px-4 py-2 border">Palpite</th>
          </tr>
        </thead>
        <tbody>
          <% @bets.each do |bet| %>
            <tr>
              <td class="px-4 py-2 border"><%= "#{bet.game.home_team.name} X #{bet.game.away_team.name}" %></td>
              <td class="px-4 py-2 border"><%= bet.game.round.number %></td>
              <td class="px-4 py-2 border"><%= bet.prediction.capitalize %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>